{
  "expo": {
    "scheme": "cleanspot",
    "name": "CleanSpotMobile",
    "slug": "CleanSpotMobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "L'application accède à vos photos pour vous permettre d'ajouter des images à vos signalements.",
          "cameraPermission": "L'application accède à votre appareil photo pour prendre des photos de signalements.",
          "microphonePermission": false
        }
      ],      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "L'application utilise la localisation pour géolocaliser vos signalements de dépôts sauvages."
        }
      ]
    ]
  }
}
